<header class="header">
  <div class="container">
    <div class="right">
      <% if logged_in? %>
        <%= link_to "Home", root_path, class: "btn btn-default" %>
        <% if admin_login? %>
          <%= link_to "Log", log_path, class: "btn btn-default" %>
          <%= link_to "Users", users_path, class: "btn btn-default" %>
          <%= link_to "Add user", new_user_path, class: "btn btn-default" %>
        <% else %>
          <%= link_to "Log", log_path, class: "btn btn-default" %>
        <% end %>
        <%= link_to "Log out", logout_path, method: "delete", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</header>